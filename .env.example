# =============================================================================
# CONFIGURAÇÕES DA API AVALIAR
# =============================================================================

# Porta do servidor
API_PORT=4200

# =============================================================================
# CONFIGURAÇÕES DE CACHE E LIMPEZA DE PDFs TEMPORÁRIOS
# =============================================================================

# Tempo de vida dos PDFs temporários (em minutos)
# PDFs de compilações não salvas serão deletados após este período
TEMP_PDF_TTL_MINUTES=30

# Intervalo entre execuções automáticas de limpeza (em minutos)
CLEANUP_INTERVAL_MINUTES=10

# Número máximo de PDFs temporários mantidos
# Quando exceder este limite, os PDFs mais antigos serão removidos
MAX_TEMP_PDFS=100

# =============================================================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO JWT
# =============================================================================

# Chave secreta para assinar tokens JWT
# IMPORTANTE: Gere uma chave forte e única para produção!
# Para gerar: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production

# Algoritmo de criptografia JWT (recomendado: HS256)
JWT_ALGORITHM=HS256

# Tempo de expiração do token de acesso em minutos
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Senha/PIN para login na aplicação
# IMPORTANTE: Altere esta senha em produção!
LOGIN_PIN=123456
